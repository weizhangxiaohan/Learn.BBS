
@{
    ViewBag.Title = "添加贴吧";
}
@model learn.bbs.web.Models.AddAreaViewModel

<form class="container" action="/area/add" method="post">
    <div class="form-group">
        <label for="area_name">@Html.DisplayNameFor(m => m.AreaName)</label>
        @*<input type="text" class="form-control" id="area_name" name="area_name"/>*@
        @Html.TextBoxFor(m=>m.AreaName,new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AreaName)
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(m => m.BeginTime)</label>
        @Html.TextBoxFor(m => m.BeginTime, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BeginTime)
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(m => m.EndTime)</label>
        @Html.TextBoxFor(m => m.EndTime, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.EndTime)
    </div>
    <div class="form-group">
        <label >@Html.DisplayNameFor(m=>m.AppraiseType)：</label>
        <label class="radio-inline">
            <input type="radio" name="AppraiseType" id="inlineRadio1" value="1"> 点赞
        </label>
        <label class="radio-inline">
            <input type="radio" name="AppraiseType" id="inlineRadio2" value="2"> 评星
        </label>
        <label class="radio-inline">
            <input type="radio" name="AppraiseType" id="inlineRadio3" value="3"> 无
        </label>
    </div>
    <div class="checkbox">
        <label>开启评论</label>
        <label>
            @Html.CheckBoxFor(m=>m.IsAllowReply)
        </label>
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(m => m.AreaStatus)：</label>
        <label class="radio-inline">
            <input type="radio" name="AreaStatus" id="inlineRadio1" value="1"> 草稿
        </label>
        <label class="radio-inline">
            <input type="radio" name="AreaStatus" id="inlineRadio2" value="2"> 发布
        </label>
    </div>

    <label>@Html.DisplayNameFor(m=>m.Remark)</label>
    @Html.TextAreaFor(m=>m.Remark,new { @class="form-control",rows = "5"})
    @Html.ValidationMessageFor(m=>m.Remark)
    <br/>
    <button type="submit" class="btn btn-success">保存</button>
</form>

