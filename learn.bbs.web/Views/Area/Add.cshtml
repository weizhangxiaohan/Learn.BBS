
@{
    ViewBag.Title = "添加主题";
}
@model learn.bbs.web.Models.AreaViewModel

<form class="container" action="/area/add" method="post">
    <div class="form-group">
        <label class="form-control" for="area_name">@Html.DisplayNameFor(m => m.area_name)</label>
        <input type="text" class="form-control" id="area_name" name="area_name"/>
    </div>
    <div class="form-group">
        <label class="form-control">@Html.DisplayNameFor(m => m.begin_time)</label>
        <input type="datetime" class="form-control" id="begin_time" name="begin_time"/>
    </div>
    <div class="form-group">
        <label class="form-control">@Html.DisplayNameFor(m => m.end_time)</label>
        <input type="datetime" class="form-control" id="end_time" name="end_time" />
    </div>
    <div class="form-group">
        <label >@Html.DisplayNameFor(m=>m.appraise_type)：</label>
        <label class="radio-inline">
            <input type="radio" name="appraise_type" id="inlineRadio1" value="1"> 点赞
        </label>
        <label class="radio-inline">
            <input type="radio" name="appraise_type" id="inlineRadio2" value="2"> 评星
        </label>
        <label class="radio-inline">
            <input type="radio" name="appraise_type" id="inlineRadio3" value="3"> 无
        </label>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" id="is_allow_reply" name="is_allow_reply" value="1"> 开启评论
        </label>
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(m => m.area_status)：</label>
        <label class="radio-inline">
            <input type="radio" name="area_status" id="inlineRadio1" value="1"> 草稿
        </label>
        <label class="radio-inline">
            <input type="radio" name="area_status" id="inlineRadio2" value="2"> 发布
        </label>
    </div>

    <label>@Html.DisplayNameFor(m=>m.remark)</label>
    <textarea class="form-control" rows="3" name="remark"></textarea>
    <br/>
    <button type="submit" class="btn btn-success">保存</button>
</form>

