
@{
    ViewBag.Title = "List";
}

@using learn.bbs.dal.EfModel
@model IList<bbs_area>

<div>
    <form class="form-inline form-horizontal" action="/area/search" method="post" style="height:70px;border-style:solid;border-width:1px;border-color:#ddd;padding:6px">
        <div class="form-group col-md-4">
            <div class="row">
                <div class="col-md-4"><label for="area_name">主题名称：</label></div>
                <div class="col-md-8"><input type="text" class="form-control" id="area_name" name="area_name" placeholder="请输入主题名称"></div>
            </div>
        </div>

        <div class="form-group col-md-4">
            <div class="row">
                <div class="col-md-4"><label for="area_status">主题状态：</label></div>
                <div class="col-md-8">
                    <select class="form-control" id="area_status">
                        <option value="1">草稿</option>
                        <option value="2">发布</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-md-offset-1">
            <button type="submit" class="btn btn-success">搜索</button>
        </div>        
    </form>
    <div class="btn-group pull-right" style="padding-top:6px">
        <a href="/area/add" class="btn btn-default"> 新增</a>
        <a href="javascript:DeleteAreas()" class="btn btn-default"> 删除</a>
    </div>
    <table id="table_list" class="table table-striped table-bordered">
        <tr><th>全选</th> <th>主题名</th><th>开放时间</th><th>状态</th><th>更新时间</th><th>创建者</th></tr>
        @foreach (bbs_area item in Model)
        {

            <tr>
                <td><input type="checkbox" class="checkbox-inline" value="@item.area_uid"/></td>
                <td>@item.area_name</td>
                <td>@((item.begin_time.HasValue ? item.begin_time.Value.ToString("yyyy-MM-dd") : "") + "到" + (item.end_time.HasValue ? item.end_time.Value.ToString("yyyy-MM-dd") : ""))</td>
                <td>@(item.area_status)</td>
                <td>@item.last_modify_time</td>
                <td>@item.creator</td>
            </tr>
        }
    </table>
    @{
        Html.RenderPartial("Pager");
    }
</div>

<script type="text/javascript">
    function DeleteAreas() {
        var areaUids = [];
        $("#table_list td input[type='checkbox']:checked").each(function () {
            var value = $(this).val();
            areaUids.push(value);
        });
        $.ajax({
            type: 'POST',
            url: '/area/delete',
            contentType: 'application/json;charset=utf-8',
            data: JSON.stringify({ areaUids:areaUids }),
            success: function () {
                window.location.href = "/area/page/1";
            }
        });
    }
</script>

